import java.util.Scanner;

public class ExercicoSwitchCase {

	public static void main(String[] args) {
		 
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite o dia: ");
		int x = sc.nextInt();
		String dia;
		
		switch (x) {
		case 1: 
			dia = "Domingo";
			break;
		case 2: 
			dia = "Segunda";
			break;
		case 3: 
			dia = "Terça";
			break;
		case 4:
			dia = "Quarta";
			break;
		case 5: 
			dia = "Quinta";
			break;
		case 6: 
			dia = "Sexta";	
			break;
		default:
			dia = "Sábado";
			break;
		}
		
		System.out.println("Dia da semana é: " + dia);
		sc.close();

	}

}
